#runs a batch test, $1 (the first arg) is the number of runs
#requires that grinder be set to store # of logs > $1

for ((n=0; n<$1; n++))
do
  cd mysql-myisam
  java net.grinder.Grinder
  cp log/verde-0.log ../results/08_insertlongstream_scaled/logs/mysql-myisam/verde-0.log$n
  cd ..
  cd mysql-innodb
  java net.grinder.Grinder
  cp log/verde-0.log ../results/08_insertlongstream_scaled/logs/mysql-innodb/verde-0.log$n
  cd ..
  cd postgres
  java net.grinder.Grinder
  cp log/verde-0.log ../results/08_insertlongstream_scaled/logs/postgres/verde-0.log$n
  cd ..
  cd readingdb
  java net.grinder.Grinder
  cp log/verde-0.log ../results/08_insertlongstream_scaled/logs/readingdb/verde-0.log$n
  cd ..
done

echo "TEST COMPLETED, check results for err"
