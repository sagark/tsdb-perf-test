#runs a batch test, $1 (the first arg) is the number of runs
#requires that grinder be set to store # of logs > $1

for ((n=0; n<$1; n++))
do
  cd mysql
  cp t_mysql-myisam t_mysql.py 
  java net.grinder.Grinder
  cp log/verde-0.log ../results/07_horizontal_scaled/logs/mysql-myisam/verde-0.log$n
  cp t_mysql-innodb t_mysql.py
  java net.grinder.Grinder
  cp log/verde-0.log ../results/07_horizontal_scaled/logs/mysql-innodb/verde-0.log$n
  cd ..
  cd postgres
  java net.grinder.Grinder
  cp log/verde-0.log ../results/07_horizontal_scaled/logs/postgres/verde-0.log$n
  cd ..
  cd readingdb
  java net.grinder.Grinder
  cp log/verde-0.log ../results/07_horizontal_scaled/logs/readingdb/verde-0.log$n
  cd ..
done

echo "TEST COMPLETED, check results for err"
